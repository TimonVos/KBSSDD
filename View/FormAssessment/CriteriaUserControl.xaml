<UserControl x:Class="View.FormAssessment.CriteriaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.FormAssessment"
             xmlns:formAssessment="clr-namespace:ViewModel.FormAssessment;assembly=ViewModel"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance formAssessment:FormAssessmentViewModel}">
    <Grid>
        <ListBox Background="DarkGray" ItemsSource="{Binding SelectedCompetenceViewModel.Criteria}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Height="30" Width="150">
                        <RadioButton Content="{Binding Title}"></RadioButton>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
