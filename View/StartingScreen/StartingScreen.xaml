<Window x:Class="View.StartingScreen.StartingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewModel.StartingScreen;assembly=ViewModel"
        mc:Ignorable="d"
        Title="StartingScreen" Height="450" Width="800">

    <Window.Resources>
        <local:StartingScreenViewModel x:Key="ViewModel">
            
        </local:StartingScreenViewModel>
    </Window.Resources>
    
    <Window.DataContext>
        <Binding Source="{StaticResource ResourceKey=ViewModel}"/>
    </Window.DataContext>
    
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,92,0,0" TextWrapping="Wrap" Text="Selecteer het project" VerticalAlignment="Top"/>
        <ListBox d:ItemsSource="{Binding Projects}" Margin="317,124,317,124"/>
        <Button Content="Ga verder" HorizontalAlignment="Left" Margin="375,339,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
